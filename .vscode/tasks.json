{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸ“¦ Build Package",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "pwsh",
                    "args": [
                        "-NoProfile"
                    ]
                }
            },
            "command": "${workspaceFolder}/Scripts/Build.ps1",
            "detail": "Builds the Mod Project using `divine.exe` (lslib)",
            "args": [
                "-Version",
                "${input:versionKind}",
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "inputs": [
        {
            "id": "versionKind",
            "type": "pickString",
            "description": "Update Version",
            "options": [
                "Build",
                "Revision",
                "Minor",
                "Major",
                "None",
            ],
            "default": "Build"
        },
    ]
}
